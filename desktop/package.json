{
    "name": "diary-desktop",
    "version": "1.0.0",
    "description": "Desktop application for Diary",
    "main": "dist/main/main.js",
    "scripts": {
        "start": "electron .",
        "dev": "concurrently \"npm run start\" \"npm run watch\"",
        "build": "rimraf dist && tsc && webpack --config webpack.main.config.js && webpack --config webpack.renderer.config.js",
        "watch": "tsc -w",
        "lint": "eslint -c .eslintrc --ext .ts,.tsx ./src",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/node": "^20.11.24",
        "@types/react": "^18.2.61",
        "@types/react-dom": "^18.2.19",
        "@typescript-eslint/eslint-plugin": "^7.1.0",
        "@typescript-eslint/parser": "^7.1.0",
        "concurrently": "^8.2.2",
        "copy-webpack-plugin": "^12.0.2",
        "css-loader": "^6.10.0",
        "electron": "^29.1.0",
        "electron-builder": "^24.12.0",
        "eslint": "^8.57.0",
        "html-webpack-plugin": "^5.6.0",
        "rimraf": "^5.0.5",
        "style-loader": "^3.3.4",
        "ts-loader": "^9.5.1",
        "typescript": "^5.3.3",
        "webpack": "^5.90.3",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "@aws-sdk/client-dynamodb": "^3.775.0",
        "@aws-sdk/lib-dynamodb": "^3.775.0",
        "argon2": "^0.41.1",
        "crystals-kyber-js": "^2.3.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "build": {
        "appId": "com.diary.desktop",
        "productName": "Diary Desktop",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "package.json"
        ],
        "win": {
            "target": "nsis",
            "icon": "build/icon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "build/icon.icns"
        },
        "linux": {
            "target": "AppImage",
            "icon": "build/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    }
}
