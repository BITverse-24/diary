{
    "name": "diary-desktop",
    "version": "1.0.0",
    "description": "Desktop application for Diary",
    "main": "dist/main/main.js",
    "scripts": {
        "start": "electron .",
        "dev": "concurrently \"npm run start\" \"npm run watch\"",
        "build": "tsc && webpack --config webpack.main.config.js && webpack --config webpack.renderer.config.js",
        "watch": "tsc -w",
        "lint": "eslint -c .eslintrc --ext .ts,.tsx ./src",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/node": "^20.11.24",
        "@types/react": "^18.2.61",
        "@types/react-dom": "^18.2.19",
        "@typescript-eslint/eslint-plugin": "^7.1.0",
        "@typescript-eslint/parser": "^7.1.0",
        "concurrently": "^8.2.2",
        "electron": "^29.1.0",
        "electron-builder": "^24.12.0",
        "eslint": "^8.57.0",
        "ts-loader": "^9.5.1",
        "typescript": "^5.3.3",
        "webpack": "^5.90.3",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "build": {
        "appId": "com.diary.desktop",
        "productName": "Diary Desktop",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "package.json"
        ],
        "win": {
            "target": "nsis"
        },
        "mac": {
            "target": "dmg"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}